<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="635.0" prefWidth="400" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="isip.kursach.ProfileController">
   <!-- Фон -->
   <Rectangle fill="#f0f0f0" height="635.0" layoutY="-1.0" width="400" />

   <!-- Заголовок -->
   <Label layoutX="140" layoutY="30" text="Профиль">
      <font>
         <Font size="24.0" />
      </font>
   </Label>

   <!-- Поля для ввода -->
   <Label layoutX="50" layoutY="80" text="Логин:" />
   <TextField fx:id="loginField" layoutX="50" layoutY="100" prefHeight="30" prefWidth="300" />

   <Label layoutX="50" layoutY="140" text="Email:" />
   <TextField fx:id="emailField" layoutX="50" layoutY="160" prefHeight="30" prefWidth="300" />

   <Label layoutX="50" layoutY="200" text="Пароль:" />
   <PasswordField fx:id="passwordField" layoutX="50" layoutY="220" prefHeight="30" prefWidth="300" />

   <Label layoutX="50" layoutY="260" text="Номер телефона:" />
   <TextField fx:id="numberPhoneField" layoutX="50" layoutY="280" prefHeight="30" prefWidth="300" />

   <Label layoutX="50" layoutY="320" text="Адрес:" />
   <TextField fx:id="addressField" layoutX="50" layoutY="340" prefHeight="30" prefWidth="300" />

   <Label layoutX="50" layoutY="380" text="Полное имя:" />
   <TextField fx:id="fullNameField" layoutX="50" layoutY="400" prefHeight="30" prefWidth="300" />

   <Label layoutX="50" layoutY="440" text="Дата рождения:" />
   <DatePicker fx:id="birthdayPicker" layoutX="50" layoutY="460" prefHeight="30" prefWidth="300" />

   <!-- Кнопка "Изменить" -->
   <Button layoutX="150.0" layoutY="507.0" onAction="#updateProfile" prefHeight="40" prefWidth="100" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Изменить" />
   <Button layoutX="150.0" layoutY="568.0" onAction="#closeWindow" prefHeight="40" prefWidth="100" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Назад" />
</Pane>
